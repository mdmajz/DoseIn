<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800" styleClass="signup-root" stylesheets="@../css/signup.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.SignupController">
    <children>
        <!-- Left Pane with Logo -->
        <VBox alignment="CENTER" maxWidth="350" minWidth="200" prefHeight="600.0" prefWidth="320.0" styleClass="signup-left-pane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png" />
                </image>
            </ImageView>
            <Label styleClass="signup-app-title" text="DoseIn" />
        </VBox>

        <!-- Right Pane: Sign Up Form -->
        <VBox alignment="CENTER" layoutX="380.0" layoutY="83.0" prefHeight="454.0" prefWidth="365.0" spacing="20" styleClass="vbox-two" stylesheets="@../css/signup.css" AnchorPane.bottomAnchor="63.0" AnchorPane.topAnchor="83.0">
            <Label alignment="CENTER" prefHeight="34.0" prefWidth="109.0" styleClass="signup-form-title" text="Sign Up" />
            <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Username" styleClass="signup-field">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </TextField>
            <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Password" styleClass="signup-field">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </PasswordField>
            <Button maxWidth="-Infinity" onAction="#handleSignUp" prefHeight="45.0" prefWidth="127.0" styleClass="signup-button" text="Sign Up" />
            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?" />
                <Hyperlink onAction="#handleGoToLogin" styleClass="signup-link" text="Sign In" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
