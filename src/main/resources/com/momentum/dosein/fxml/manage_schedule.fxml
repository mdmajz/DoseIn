<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.momentum.dosein.controller.ManageScheduleController"
            stylesheets="@../css/dashboard.css,@../css/manage_schedule.css"
            styleClass="dashboard-root"
            prefWidth="800" prefHeight="600">

    <!-- LEFT NAVIGATION (exactly as dashboard.fxml) -->
    <left>
        <VBox styleClass="nav-bar" spacing="10" prefWidth="200">
            <HBox styleClass="nav-header"
                  alignment="CENTER_LEFT"
                  spacing="10"
                  prefHeight="60"
                  onMouseClicked="#handleDashboard">
                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                    <image><Image url="@../images/logo.png"/></image>
                </ImageView>
                <Label text="DoseIn" styleClass="nav-logo"/>
            </HBox>
            <Button text="Dashboard"        onAction="#handleDashboard"       styleClass="nav-button"/>
            <Button text="Manage Schedule"  styleClass="nav-item"/>  <!-- active -->
            <Button text="Doctor Contacts"  onAction="#handleDoctorContacts"  styleClass="nav-item"/>
            <Button text="Emergency"        onAction="#handleEmergency"       styleClass="nav-item"/>
            <Button text="About Us"         onAction="#handleAboutUs"         styleClass="nav-item"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Sign Out"         onAction="#handleSignOut"         styleClass="nav-signout"/>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <!-- Header -->
            <HBox styleClass="welcome-banner" spacing="10" alignment="CENTER_LEFT">
                <Label text="Manage Schedule" styleClass="manage-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Stay on track with your Medication" styleClass="manage-slogan"/>
            </HBox>

            <HBox spacing="20" alignment="TOP_LEFT">
                <!-- Active Alerts List -->
                <VBox spacing="10" styleClass="manage-alerts-pane">
                    <Label text="Active Alerts" styleClass="manage-section-title"/>
                    <ListView fx:id="alertsList" styleClass="manage-listview"
                              prefWidth="200" prefHeight="300"/>
                </VBox>

                <!-- Medicine Information Panel -->
                <VBox spacing="10" styleClass="manage-info-pane">
                    <Label text="Medicine Information" styleClass="manage-panel-title"/>

                    <GridPane hgap="10" vgap="10">
                        <Label text="Name :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="manage-label"/>
                        <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="manage-value"/>

                        <Label text="Start Date :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="manage-label"/>
                        <Label fx:id="startDateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="manage-value"/>

                        <Label text="End Date :" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="manage-label"/>
                        <Label fx:id="endDateLabel" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="manage-value"/>

                        <Label text="Additional Information :" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="manage-label"/>
                        <Label fx:id="noteLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="manage-value"/>

                        <Label text="Alert Time :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="manage-label"/>
                    </GridPane>

                    <HBox fx:id="timesBox" spacing="10" styleClass="manage-times-box"/>

                    <Button text="Delete"
                            onAction="#handleDelete"
                            styleClass="nav-signout"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
