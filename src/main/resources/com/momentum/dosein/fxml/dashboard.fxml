<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.momentum.dosein.controller.DashboardController"
            stylesheets="@../css/dashboard.css"
            styleClass="dashboard-root"
            prefWidth="800" prefHeight="600">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="10" prefWidth="200" >
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="10" prefHeight="60">
                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="DoseIn" styleClass="nav-logo"/>
            </HBox>
            <Button text="Dashboard"
                    onAction="#handleDashboard"
                    styleClass="nav-button"/>
            <Button text="Manage Schedule"
                    onAction="#handleManageSchedule"
                    styleClass="nav-item"/>
            <Button text="Doctor Contacts"
                    onAction="#handleDoctorContacts"
                    styleClass="nav-item"/>
            <Button text="Emergency"
                    onAction="#handleEmergency"
                    styleClass="nav-item"/>
            <Button text="About Us"
                    onAction="#handleAboutUs"
                    styleClass="nav-item"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Sign Out"
                    onAction="#handleSignOut"
                    styleClass="nav-signout"/>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <!-- Welcome Banner -->
            <HBox styleClass="welcome-banner" spacing="10" alignment="CENTER_LEFT">
                <VBox>
                    <Label fx:id="greetingLabel"    styleClass="welcome-text"/>
                    <Label fx:id="sloganLabel"      styleClass="welcome-slogan"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="timeLabel"         styleClass="time-label"/>
            </HBox>

            <!-- Schedule Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Today's Schedule" styleClass="schedule-header"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Set Reminder"
                        onAction="#handleSetReminder"
                        styleClass="schedule-button"/>
            </HBox>

            <!-- Scrollable Schedule List -->
            <ScrollPane fitToWidth="true" styleClass="schedule-scroll">
                <content>
                    <VBox fx:id="scheduleContainer" spacing="10" styleClass="schedule-list"/>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
