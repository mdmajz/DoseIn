<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/about_us.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.AboutUsController">

    <!-- LEFT NAVIGATION (same as before) -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-button-active">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT (updated with images) -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="0" styleClass="main-content">
            <!-- Title Banner -->
            <HBox alignment="CENTER_LEFT" spacing="0" styleClass="about-header">
                <Label styleClass="about-title" text="About Us" />
            </HBox>

            <!-- Team Card -->
            <VBox alignment="CENTER" spacing="0" styleClass="about-content">

                <!-- Image Container for both images -->
                <HBox alignment="CENTER" spacing="0" styleClass="image-container">
                    <!-- Team Photo with ID -->
                    <ImageView styleClass="teamPhoto" fitWidth="245" fitHeight="300" preserveRatio="true">
                        <Image url="@../images/team.png"/>
                    </ImageView>

                    <!-- DIU Photo with ID -->
                    <ImageView styleClass="diuPhoto" fitWidth="270" fitHeight="300" preserveRatio="true">
                        <Image url="@../images/diu.png"/>
                    </ImageView>
                </HBox>
                <!-- Team Information Container -->
                <VBox styleClass="info_container" alignment="CENTER_LEFT" spacing="0">
                    <Label styleClass="team-title" text="TEAM MOMENTUM" />
                    <Region prefHeight="8" />
                    <Label styleClass="about-text" text="Md. Majharul Islam || Md. Rijwan Kabir || Md. Obeduzzaman || Banna Rani Sarkar || Md. A. Barik Sarkar" />
                    <Region prefHeight="6" />
                    <Label styleClass="about-text" text="Contact us at: teammomentum@gmail.com" />
                    <Label styleClass="about-text" text="Department of Computer Science &amp; Engineering" />
                    <Label styleClass="about-text" text="Daffodil International University, Bangladesh" />
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>