<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/set_reminder.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.SetReminderController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <HBox styleClass="logo-pills" spacing="4" alignment="CENTER">
                        <Region styleClass="logo-pill-green" prefWidth="8" prefHeight="16"/>
                        <Region styleClass="logo-pill-white" prefWidth="8" prefHeight="16"/>
                    </HBox>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="0" styleClass="reminder-root">
            <VBox fx:id="cardBox" alignment="TOP_CENTER" maxWidth="576.0" prefHeight="583.0" prefWidth="532.0" spacing="24" styleClass="reminder-card" stylesheets="@../css/set_reminder.css">
                <padding>
                    <Insets bottom="35" left="35" right="35" top="35" />
                </padding>

                <!-- Title -->
                <Label styleClass="set-reminder-title" stylesheets="@../css/set_reminder.css" text="Add Medicine Information" />

                <!-- Name Field -->
                <VBox spacing="8">
                    <Label styleClass="reminder-label" text="Name:" />
                    <TextField fx:id="nameField" prefHeight="50.0" prefWidth="430.0" styleClass="reminder-field" stylesheets="@../css/set_reminder.css" />
                </VBox>

                <!-- Start Date & End Date -->
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="reminder-label" text="Start Date:" />
                        <DatePicker fx:id="startDatePicker" prefHeight="50.0" prefWidth="200.0" styleClass="reminder-field" stylesheets="@../css/set_reminder.css" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label styleClass="reminder-label" text="End Date:" />
                        <DatePicker fx:id="endDatePicker" prefHeight="50.0" prefWidth="200.0" styleClass="reminder-field" stylesheets="@../css/set_reminder.css" />
                    </VBox>
                </HBox>

                <!-- Additional Information -->
                <VBox spacing="8">
                    <Label styleClass="reminder-label" text="Additional Information:" />
                    <TextArea fx:id="noteField" prefHeight="80.0" prefWidth="430.0" styleClass="reminder-field" stylesheets="@../css/set_reminder.css" wrapText="true" />
                </VBox>

                <!-- Alert Time Section -->
                <VBox spacing="12">
                    <Label styleClass="reminder-label" text="Alert Time:" />
                    
                    <HBox spacing="16" alignment="TOP_LEFT">
                        <!-- Pre-selected Time Blocks -->
                        <VBox spacing="8">
                            <HBox fx:id="presetTimesContainer" spacing="8">
                                <Button text="12:00 AM" styleClass="preset-time-button" onAction="#handlePresetTime" />
                                <Button text="1:00 AM" styleClass="preset-time-button" onAction="#handlePresetTime" />
                                <Button text="2:00 AM" styleClass="preset-time-button" onAction="#handlePresetTime" />
                            </HBox>
                        </VBox>
                        
                        <!-- Custom Time Picker -->
                        <VBox spacing="8" alignment="TOP_CENTER">
                            <!-- Time Input -->
                            <HBox spacing="4" alignment="CENTER">
                                <Spinner fx:id="hourSpinner" editable="true" prefHeight="30.0" prefWidth="50.0" styleClass="time-spinner" />
                                <Label text=":" styleClass="time-separator" />
                                <Spinner fx:id="minuteSpinner" editable="true" prefHeight="30.0" prefWidth="50.0" styleClass="time-spinner" />
                            </HBox>
                            
                            <!-- AM/PM Toggle -->
                            <HBox spacing="2" alignment="CENTER">
                                <ToggleButton fx:id="amToggle" text="AM" styleClass="am-pm-toggle" selected="true" />
                                <ToggleButton fx:id="pmToggle" text="PM" styleClass="am-pm-toggle" />
                            </HBox>
                            
                            <!-- Add/Remove Buttons -->
                            <VBox spacing="4">
                                <Button fx:id="removeTimeButton" onAction="#handleRemoveTime" prefHeight="25.0" prefWidth="70.0" styleClass="remove-button" text="Remove" />
                                <Button fx:id="addTimeButton" onAction="#handleAddTime" prefHeight="25.0" prefWidth="70.0" styleClass="add-button" text="Add" />
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Bottom Action Buttons -->
                <HBox alignment="BOTTOM_RIGHT" spacing="15">
                    <Button onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
                    <Button onAction="#handleSetReminder" styleClass="set-reminder-button" text="Set Reminder" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
