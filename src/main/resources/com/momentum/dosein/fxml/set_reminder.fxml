<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.momentum.dosein.controller.SetReminderController"
            stylesheets="@../css/dashboard.css,@../css/set_reminder.css"
            styleClass="dashboard-root"
            prefWidth="800" prefHeight="600">

    <!-- LEFT NAVIGATION: identical to dashboard.fxml -->
    <left>
        <VBox styleClass="nav-bar" spacing="10" prefWidth="200">
            <HBox styleClass="nav-header"
                  alignment="CENTER_LEFT"
                  spacing="10"
                  prefHeight="60"
                  onMouseClicked="#handleDashboard">
                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                    <image><Image url="@../images/logo.png"/></image>
                </ImageView>
                <Label text="DoseIn" styleClass="nav-logo"/>
            </HBox>
            <Button text="Dashboard"        onAction="#handleDashboard"       styleClass="nav-button"/>
            <Button text="Manage Schedule"  onAction="#handleManageSchedule"  styleClass="nav-item"/>
            <Button text="Doctor Contacts"  onAction="#handleDoctorContacts"  styleClass="nav-item"/>
            <Button text="Emergency"        onAction="#handleEmergency"       styleClass="nav-item"/>
            <Button text="About Us"         onAction="#handleAboutUs"         styleClass="nav-item"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Sign Out"         onAction="#handleSignOut"         styleClass="nav-signout"/>
        </VBox>
    </left>

    <!-- CENTER: the reminder form, matching dashboard padding -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <Label text="Add Medicine Information" styleClass="reminder-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Name:" styleClass="reminder-label"/>
                <TextField fx:id="nameField" styleClass="reminder-field"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Start Date:" styleClass="reminder-label"/>
                <DatePicker fx:id="startDatePicker" styleClass="reminder-field"/>
                <Label text="End Date:" styleClass="reminder-label"/>
                <DatePicker fx:id="endDatePicker" styleClass="reminder-field"/>
            </HBox>

            <Label text="Alert Time" styleClass="reminder-section-title"/>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <ListView fx:id="timesList" styleClass="reminder-list"
                          prefWidth="250" prefHeight="100"/>
                <VBox spacing="10" alignment="TOP_CENTER">
                    <HBox alignment="CENTER" spacing="5">
                        <Spinner fx:id="hourSpinner" editable="true" prefWidth="60"/>
                        <Label text=":"/>
                        <Spinner fx:id="minuteSpinner" editable="true" prefWidth="60"/>
                        <VBox spacing="5">
                            <RadioButton fx:id="amRadio" text="AM"/>
                            <RadioButton fx:id="pmRadio" text="PM"/>
                        </VBox>
                    </HBox>
                    <HBox spacing="10">
                        <Button fx:id="removeTimeButton"
                                text="Remove"
                                onAction="#handleRemoveTime"
                                styleClass="reminder-small-button"/>
                        <Button fx:id="addTimeButton"
                                text="Add"
                                onAction="#handleAddTime"
                                styleClass="reminder-small-button"/>
                    </HBox>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Additional Information:" styleClass="reminder-label"/>
                <TextField fx:id="noteField" styleClass="reminder-field"/>
            </HBox>

            <!-- Buttons moved into center, with same padding as dashboard -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding><Insets top="0" right="20" bottom="20" left="0"/></padding>
                <Button text="Cancel"
                        onAction="#handleCancel"
                        styleClass="schedule-button"/>
                <Button text="Set Reminder"
                        onAction="#handleSetReminder"
                        styleClass="schedule-button"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
