<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/set_reminder.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.SetReminderController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="DoseIn" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="0" styleClass="reminder-root">
            <VBox fx:id="cardBox" alignment="TOP_CENTER" maxWidth="560.0" prefHeight="500.0" prefWidth="540.0" spacing="12" styleClass="reminder-card">
                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>

                <!-- Title -->
                <Label styleClass="set-reminder-title" text="Add Medicine Information" />

                <!-- Name Field -->
                <VBox spacing="6">
                    <Label styleClass="form-label" text="Name :" />
                    <TextField fx:id="nameField" prefHeight="40.0" prefWidth="450.0" styleClass="form-field" />
                </VBox>

                <!-- Start and End Date Fields (Side by Side) -->
                <HBox spacing="20">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="form-label" text="Start Date :" />
                        <DatePicker fx:id="startDatePicker" prefHeight="40.0" prefWidth="200.0" styleClass="form-field" />
                    </VBox>
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="form-label" text="End Date :" />
                        <DatePicker fx:id="endDatePicker" prefHeight="40.0" prefWidth="200.0" styleClass="form-field" />
                    </VBox>
                </HBox>

                                <!-- Alert Time Section -->
                <VBox spacing="8">
                    <Label styleClass="form-label" text="Alert Time :" />
                    
                    <!-- Pre-set Time Buttons -->
                    <HBox spacing="8">
                        <Button text="12:00 AM" onAction="#handlePresetTime" styleClass="preset-time-button" />
                        <Button text="1:00 AM" onAction="#handlePresetTime" styleClass="preset-time-button" />
                        <Button text="2:00 AM" onAction="#handlePresetTime" styleClass="preset-time-button" />
                    </HBox>
                    
                    <!-- Time Picker -->
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <HBox alignment="CENTER" spacing="5" styleClass="time-picker-container">
                            <Spinner fx:id="hourSpinner" editable="true" prefHeight="35.0" prefWidth="50.0" styleClass="time-spinner" />
                            <Label text=":" styleClass="time-separator" />
                            <Spinner fx:id="minuteSpinner" editable="true" prefHeight="35.0" prefWidth="50.0" styleClass="time-spinner" />
                        </HBox>
                        
                        <VBox spacing="3">
                            <RadioButton fx:id="amRadio" prefHeight="18.0" prefWidth="35.0" styleClass="am-pm-button am-selected" text="AM" />
                            <RadioButton fx:id="pmRadio" prefHeight="18.0" prefWidth="35.0" styleClass="am-pm-button" text="PM" />
                        </VBox>
                    </HBox>
                    
                    <!-- Add/Remove Buttons -->
                    <HBox spacing="8">
                        <Button fx:id="removeTimeButton" onAction="#handleRemoveTime" prefHeight="25.0" prefWidth="70.0" styleClass="remove-button" text="Remove" />
                        <Button fx:id="addTimeButton" onAction="#handleAddTime" prefHeight="25.0" prefWidth="70.0" styleClass="add-button" text="Add" />
                    </HBox>
                    
                    <!-- Time List (hidden but needed for functionality) -->
                    <ListView fx:id="timesList" visible="false" managed="false" />
                </VBox>

                <!-- Additional Information Field -->
                <VBox spacing="6">
                    <Label styleClass="form-label" text="Additional Information :" />
                    <TextArea fx:id="noteField" prefHeight="70.0" prefWidth="450.0" styleClass="form-field" wrapText="true" />
                </VBox>

                <!-- Bottom Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <padding>
                        <Insets top="15" />
                    </padding>
                    <Button onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
                    <Button onAction="#handleSetReminder" styleClass="set-reminder-button" text="Set Reminder" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
