<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/set_reminder.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.SetReminderController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox styleClass="main-content" spacing="25">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <VBox styleClass="reminder-card" spacing="20">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>
                
                <VBox spacing="15" alignment="TOP_CENTER">
                    <!-- Title -->
                    <Label text="Add Medicine Information" styleClass="reminder-title"/>

                    <!-- Name Field -->
                    <VBox spacing="5">
                        <Label text="Name:" styleClass="form-label"/>
                        <TextField fx:id="nameField" styleClass="form-field" prefHeight="35"/>
                    </VBox>

                    <!-- Start Date & End Date -->
                    <HBox spacing="30">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Start Date:" styleClass="form-label"/>
                            <DatePicker fx:id="startDatePicker" styleClass="form-field" prefHeight="35"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="End Date:" styleClass="form-label"/>
                            <DatePicker fx:id="endDatePicker" styleClass="form-field" prefHeight="35"/>
                        </VBox>
                    </HBox>

                    <!-- Alert Time Section -->
                    <VBox spacing="8">
                        <Label text="Alert Time:" styleClass="form-label"/>
                        
                        <HBox spacing="30" alignment="TOP_LEFT">
                            <!-- Dynamic Time List -->
                            <VBox spacing="5">
                                <Label text="Selected Times:" styleClass="form-label"/>
                                <ListView fx:id="timesListView" prefHeight="80" prefWidth="200" styleClass="times-list"/>
                            </VBox>
                            
                            <!-- Custom Time Picker -->
                            <VBox spacing="5" alignment="TOP_CENTER">
                                <!-- Time Input -->
                                <HBox spacing="4" alignment="CENTER">
                                    <Spinner fx:id="hourSpinner" editable="true" prefWidth="60" prefHeight="40" styleClass="time-spinner"/>
                                    <Label text=":" styleClass="time-separator"/>
                                    <Spinner fx:id="minuteSpinner" editable="true" prefWidth="60" prefHeight="40" styleClass="time-spinner"/>
                                </HBox>
                                
                                <!-- AM/PM Toggle -->
                                <HBox spacing="4" alignment="CENTER">
                                    <ToggleButton fx:id="amToggle" text="AM" styleClass="am-pm-toggle" selected="true" prefWidth="50" prefHeight="35"/>
                                    <ToggleButton fx:id="pmToggle" text="PM" styleClass="am-pm-toggle" prefWidth="50" prefHeight="35"/>
                                </HBox>
                                
                                <!-- Add/Remove Buttons -->
                                <VBox spacing="3">
                                    <Button fx:id="addTimeButton" text="Add" styleClass="add-button" onAction="#handleAddTime"/>
                                    <Button fx:id="removeTimeButton" text="Remove" styleClass="remove-button" onAction="#handleRemoveTime"/>
                                    <Button text="Test Spinners" styleClass="add-button" onAction="#testSpinners"/>
                                </VBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Additional Information -->
                    <VBox spacing="5">
                        <Label text="Additional Information:" styleClass="form-label"/>
                        <TextArea fx:id="noteField" styleClass="form-field" wrapText="true" prefRowCount="2" prefHeight="60"/>
                    </VBox>

                    <!-- Bottom Action Buttons -->
                    <HBox alignment="BOTTOM_RIGHT" spacing="10">
                        <Button text="Cancel" styleClass="cancel-button" onAction="#handleCancel"/>
                        <Button text="Set Reminder" styleClass="set-reminder-button" onAction="#handleSetReminder"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
