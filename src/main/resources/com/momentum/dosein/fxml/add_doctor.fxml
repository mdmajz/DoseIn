<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.momentum.dosein.controller.AddDoctorController"
            stylesheets="@../css/dashboard.css,@../css/add_doctor.css"
            styleClass="dashboard-root"
            prefWidth="800" prefHeight="600">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox prefWidth="200" spacing="15" styleClass="nav-bar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo and App Name -->
            <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="12" styleClass="nav-header">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <Label styleClass="nav-logo" text="Doseln" />
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button onAction="#handleDashboard" styleClass="nav-item" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleManageSchedule" styleClass="nav-item-schedule" text="Manage Schedule">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleDoctorContacts" styleClass="nav-button-active" text="Doctor Contacts">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleEmergency" styleClass="nav-item" text="Emergency">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleAboutUs" styleClass="nav-item" text="About Us">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox styleClass="signout-container">
                <Button onAction="#handleSignOut" styleClass="nav-signout" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>


    <!-- CENTER: Add Doctor Form -->
    <center>
        <VBox spacing="20" styleClass="reminder-content">
            <Label text="Add Doctor Information" styleClass="reminder-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Name :"       styleClass="reminder-label"/>
                <TextField fx:id="nameField"       styleClass="reminder-field"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Speciality :" styleClass="reminder-label"/>
                <TextField fx:id="specialtyField"  styleClass="reminder-field"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Phone :"      styleClass="reminder-label"/>
                <TextField fx:id="phoneField"      styleClass="reminder-field"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email :"      styleClass="reminder-label"/>
                <TextField fx:id="emailField"      styleClass="reminder-field"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Location :"   styleClass="reminder-label"/>
                <TextField fx:id="locationField"   styleClass="reminder-field"/>
            </HBox>

            <Label text="Additional Information :" styleClass="reminder-label"/>
            <TextArea fx:id="noteArea"
                      styleClass="reminder-field"
                      prefHeight="100"
                      wrapText="true"/>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding><Insets top="0" right="20" bottom="20" left="0"/></padding>
                <Button text="Cancel"
                        onAction="#handleCancel"
                        styleClass="delete-button"/>
                <Button text="Add Entry"
                        onAction="#handleAddEntry"
                        styleClass="add-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
