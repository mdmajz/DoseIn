<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="600" prefWidth="800" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/add_doctor.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.AddDoctorController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox prefWidth="200" spacing="15" styleClass="nav-bar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo and App Name -->
            <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="12" styleClass="nav-header">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <Label styleClass="nav-logo" text="Doseln" />
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button onAction="#handleDashboard" styleClass="nav-item" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleManageSchedule" styleClass="nav-item-schedule" text="Manage Schedule">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleDoctorContacts" styleClass="nav-button-active" text="Doctor Contacts">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleEmergency" styleClass="nav-item" text="Emergency">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleAboutUs" styleClass="nav-item" text="About Us">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox styleClass="signout-container">
                <Button onAction="#handleSignOut" styleClass="nav-signout" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>


    <!-- CENTER: Add Doctor Form -->
    <center>
        <VBox spacing="20" alignment="TOP_LEFT" styleClass="main-content">
            <!-- Title -->
            <Label text="Add Doctor Information" styleClass="section-title"/>

            <!-- White Form Container -->
            <VBox styleClass="form-container" alignment="TOP_LEFT">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Form Fields - Line by Line -->
                <VBox spacing="15">
                    <!-- Name -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Name :" styleClass="form-label" minWidth="120"/>
                        <TextField fx:id="nameField" styleClass="form-field"/>
                    </HBox>

                    <!-- Speciality -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Speciality :" styleClass="form-label" minWidth="120"/>
                        <TextField fx:id="specialtyField" styleClass="form-field"/>
                    </HBox>

                    <!-- Phone -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Phone :" styleClass="form-label" minWidth="120"/>
                        <TextField fx:id="phoneField" styleClass="form-field"/>
                    </HBox>

                    <!-- Email -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Email :" styleClass="form-label" minWidth="120"/>
                        <TextField fx:id="emailField" styleClass="form-field"/>
                    </HBox>

                    <!-- Location -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Location :" styleClass="form-label" minWidth="120"/>
                        <TextField fx:id="locationField" styleClass="form-field"/>
                    </HBox>

                    <!-- Additional Info -->
                    <VBox spacing="5">
                        <Label text="Additional Information :" styleClass="form-label"/>
                        <TextArea fx:id="noteArea" styleClass="additional-field" wrapText="true"/>
                    </VBox>
                </VBox>
                <!-- Action Buttons -->
                <HBox alignment="BOTTOM_RIGHT" spacing="10" styleClass="action-buttons-container">
                    <Button onAction="#handleAddEntry" prefWidth="120" styleClass="add-button" text="Add Entry">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">

                            </ImageView>
                        </graphic>
                    </Button>

                    <Button onAction="#handleCancel" prefWidth="120" styleClass="delete-button" text="Cancel">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                <Image url="@../images/delete-icon.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>
