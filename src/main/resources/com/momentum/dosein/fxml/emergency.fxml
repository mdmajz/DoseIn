<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.momentum.dosein.controller.EmergencyController"
            stylesheets="@../css/dashboard.css,@../css/emergency.css"
            styleClass="dashboard-root"
            prefWidth="1000" prefHeight="700">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-button-active">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <!-- Header -->
            <VBox styleClass="welcome-banner" spacing="0" alignment="CENTER_LEFT">
                <Label text="Emergency Helpline" styleClass="schedule-header"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Quick access to critical healthcare services"
                       styleClass="welcome-slogan"/>
            </VBox>

            <!-- Ambulance Services -->
            <VBox spacing="10">

                <VBox spacing="10" styleClass="emergency-card">
                    <Label text="Ambulance Services" styleClass="schedule-header"/>
                    <Label  text= "National Emergency Service"  styleClass="emergency-card-title"/>
                    <Label text="• 999 (Nationwide)" styleClass="emergency-card-item"/>

                    <Label text="Dhaka" styleClass="emergency-card-title"/>
                    <Label text="• Apollo Hospitals: 10678" styleClass="emergency-card-item"/>
                    <Label text="• Square Hospitals: 01713-072072" styleClass="emergency-card-item"/>
                    <Label text="• Dhaka Medical College: 01711-503030" styleClass="emergency-card-item"/>

                    <Label text="Chittagong" styleClass="emergency-card-title"/>
                    <Label text="• Chittagong Medical College: 031-619704" styleClass="emergency-card-item"/>
                </VBox>
            </VBox>

            <!-- Blood Bank -->
            <VBox spacing="10">

                <VBox spacing="10" styleClass="emergency-card">
                    <Label text="Blood Bank" styleClass="schedule-header"/>
                    <Label text="Sandhani National Blood Center" styleClass="emergency-card-title"/>
                    <Label text="• Dhaka: 01716-302100" styleClass="emergency-card-item"/>
                </VBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>
