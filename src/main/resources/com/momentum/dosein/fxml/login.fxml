<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.momentum.dosein.controller.LoginController"
            stylesheets="@../css/login.css"
            styleClass="login-root"
            prefWidth="800" prefHeight="600">
    <children>
        <HBox prefWidth="800" prefHeight="600">

            <!-- Left Pane with Logo -->
            <VBox styleClass="login-left-pane"
                  alignment="CENTER"
                  prefWidth="300">
                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png"/>
                    </image>
                </ImageView>
                <Label text="DoseIn"
                       styleClass="login-app-title"/>
            </VBox>

            <!-- Right Pane: Sign In Form -->
            <VBox alignment="CENTER"
                  spacing="20"
                  prefWidth="500">
                <Label text="Sign In"
                       styleClass="login-form-title"/>
                <TextField fx:id="usernameField"
                           promptText="Username"
                           styleClass="login-field"/>
                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               styleClass="login-field"/>
                <Button text="Sign In"
                        onAction="#handleSignIn"
                        styleClass="login-button"/>
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?"/>
                    <Hyperlink text="Sign Up"
                               onAction="#handleSignUp"
                               styleClass="login-link"/>
                </HBox>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
