<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/doctor_contacts.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.DoctorContactsController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox prefWidth="200" spacing="15" styleClass="nav-bar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo and App Name -->
            <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="12" styleClass="nav-header">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <Label styleClass="nav-logo" text="Doseln" />
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button onAction="#handleDashboard" styleClass="nav-item" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleManageSchedule" styleClass="nav-item-schedule" text="Manage Schedule">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleDoctorContacts" styleClass="nav-button-active" text="Doctor Contacts">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleEmergency" styleClass="nav-item" text="Emergency">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleAboutUs" styleClass="nav-item" text="About Us">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox styleClass="signout-container">
                <Button onAction="#handleSignOut" styleClass="nav-signout" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="15" styleClass="main-content">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Header -->
            <VBox spacing="0" styleClass="welcome-banner">
                <Label styleClass="manage-title" text="Doctor Contacts" />
                <Region HBox.hgrow="ALWAYS" />
                <Label styleClass="manage-slogan" text="Manage your personal healthcare contacts" />
            </VBox>

            <!-- Main Content Container with White Background -->
            <VBox spacing="20" styleClass="main-content-container">
                <HBox alignment="TOP_LEFT" spacing="20">
                    <!-- Saved Entries List -->
                    <VBox spacing="10" styleClass="manage-alerts-pane">
                        <Label prefHeight="30.0" prefWidth="142.0" styleClass="manage-section-title" text="Saved Entries" />
                        <ScrollPane fitToWidth="true" prefHeight="200" prefWidth="200" styleClass="manage-scrollpane">
                            <ListView fx:id="contactsList" styleClass="manage-listview" />
                        </ScrollPane>
                    </VBox>

                    <!-- Doctor Information Panel -->
                    <VBox maxWidth="350" prefWidth="350" spacing="10" styleClass="manage-info-pane">
                        <Label styleClass="manage-panel-title" text="Doctor Information" />

                        <GridPane hgap="10" vgap="10">
                            <!-- Regular inline fields (Name, Speciality, etc.) -->
                            <Label styleClass="manage-label" text="Name :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label fx:id="nameLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label styleClass="manage-label" text="Speciality :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <Label fx:id="specialtyLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label styleClass="manage-label" text="Phone :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <Label fx:id="phoneLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label styleClass="manage-label" text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <Label fx:id="emailLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label styleClass="manage-label" text="Location :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <Label fx:id="locationLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <!-- Additional Information (special handling) -->
                            <Label styleClass="manage-label" text="Additional Information :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <VBox GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="5" GridPane.halignment="LEFT">
                                <Label fx:id="noteLabel" styleClass="manage-value" style="-fx-padding: 0 0 0 0;" />
                            </VBox>

                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" prefWidth="180"/>
                                <ColumnConstraints halignment="LEFT" prefWidth="230" hgrow="ALWAYS"/>
                                <ColumnConstraints maxWidth="0" prefWidth="0"/>
                                <ColumnConstraints maxWidth="0" prefWidth="0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints /> <!-- For Additional Info label -->
                                <RowConstraints /> <!-- For Additional Info content -->
                            </rowConstraints>
                        </GridPane>

                        <Region VBox.vgrow="ALWAYS" />

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10" styleClass="action-buttons-container">
                            <Button onAction="#handleAdd" prefWidth="120" styleClass="add-button" text="Add">
                                <graphic>
                                    <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                        <Image url="@../images/plus-icon.png" />
                                    </ImageView>
                                </graphic>
                            </Button>

                            <Button onAction="#handleDelete" prefWidth="120" styleClass="delete-button" text="Delete">
                                <graphic>
                                    <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                        <Image url="@../images/delete-icon.png" />
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>